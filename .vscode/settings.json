{
    // 文档: https://code.visualstudio.com/docs
    // 推荐插件：
    // C/C++、ccls、clangd、Code Runner、Cmake 、CMake Tools
    // GNU Assembler Language Support、Debugger for java 、Maven for Java
    // Bracket Pair Colorizer 2、Visual Studio Blue Theme、Color Highligh
    // Markdown All in one、One Dark Pro 、Git Historyt、Better TOML
    // Python、Remote - *、Rust(rls) 、LinkerScript、LaTeX Workshop
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.formatting": "Disabled",
    "C_Cpp.errorSquiggles": "Disabled",
    "C_Cpp.intelliSenseEngine": "Disabled",
    "code-runner.executorMap": {
        "c": "cd $dir && clang $fileName -o $fileNameWithoutExt.exe && ./$fileNameWithoutExt.exe",
        "cpp": "cd $dir && clang++ $fileName -o $fileNameWithoutExt.exe && ./$fileNameWithoutExt.exe",
        "python": "cd $dir && python $fileName"
    },
    "code-runner.terminalRoot": "/", // unix风格
    "code-runner.runInTerminal": true,
    "code-runner.preserveFocus": false,
    "code-runner.saveAllFilesBeforeRun": true,
    //"ccls.completion.detailedLabel": true,
    //"ccls.codeLens.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.snippetSuggestions": "bottom",
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    //"editor.formatOnType": true,
    "editor.fontFamily": "Consolas, 微软雅黑",
    "editor.fontSize": 16,
    "editor.tokenColorCustomizations": {},
    "editor.renderControlCharacters": true,
    "editor.minimap.maxColumn": 80,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.autoGuessEncoding": true,
    "files.trimTrailingWhitespace": true,
    "files.defaultLanguage": "cpp",
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        // vs
        //"**/Debug": true,
        //"**/Release": true,
        //"**/x64": true,
        //"**/.vs": true,
        //"**/*.exe": true,
        // linux
        //"**/*.out": true,
        // DOS
        //"**/*.EXE": true,
        //"**/*.OBJ": true,
    },
    "files.associations": {
        "*.m": "matlab",
        "*.gdbinit*": "shellscript",
        "*.asm": "gas", // GNU Assembly
    },
    "markdown.preview.fontSize": 15,
    "markdown.preview.lineHeight": 1.1,
    "markdown.preview.fontFamily": "Consolas, 微软雅黑",
    "svn.path": "D:/msys64/usr/bin/svn.exe",
    "svn.diff.withHead": false,
    "terminal.integrated.fontFamily": "FiraCode NF", // https://github.com/ryanoasis/nerd-fonts/tree/master/patched-fonts/FiraCode
    "terminal.integrated.fontSize": 15,
    "terminal.integrated.shell.windows": "D:/msys64/usr/bin/bash.exe", // 使用msys2的bash
    //"terminal.integrated.shell.windows": "wsl.exe",
    "terminal.integrated.scrollback": 2000,
    "todo-tree.highlights.defaultHighlight": {
        "background": "#ff0"
    },
    "todo-tree.tree.showScanModeButton": false,
    "window.openFoldersInNewWindow": "on",
    "window.zoomLevel": -1,
    "workbench.settings.openDefaultSettings": true,
    "workbench.settings.useSplitJSON": true,
    "workbench.settings.editor": "json",
    "workbench.editor.titleScrollbarSizing": "large",
    "workbench.colorTheme": "Visual Studio Blue",
    "workbench.colorCustomizations": {
        "[Visual Studio Blue]": {
            "editor.background": "#f8f8f8",
            "tab.inactiveBackground": "#a7b2d5",
            "tab.inactiveForeground": "#000000",
            "editorGroupHeader.noTabsBackground": "#a7b2d5",
            "editorGroupHeader.tabsBackground": "#a7b2d5",
        },
    },
    //"http.proxy": "http://127.0.0.1:20807",
    //"http.proxyStrictSSL": false,
    "latex-workshop.latex.tools": [
        {
            // 编译工具和命令
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOCFILE%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOCFILE%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ],
        },
        {
            "name": "pdflatex",
            "tools": [
                "pdflatex"
            ]
        },
        {
            "name": "xe->bib->xe->xe",
            "tools": [
                "xelatex",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        },
        {
            "name": "pdf->bib->pdf->pdf",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        }
    ],
    //"latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.view.pdf.viewer": "external",
    "latex-workshop.view.pdf.external.viewer.command": "E:/Program Files/SumatraPDF/SumatraPDF.exe",
    "latex-workshop.view.pdf.external.viewer.args": [
        "-forward-search",
        "%TEX%",
        "%LINE%",
        "-reuse-instance",
        "-inverse-search",
        "\"E:/Program Files/Microsoft VS Code/Code.exe\" \"E:/Program Files/Microsoft VS Code/resources/app/out/cli.js\" -gr \"%f\":\"%l\"",
        "%PDF%"
    ],
    "[latex]": {
        "editor.wordWrap": "on",
    },
    "java.help.firstView": "gettingStarted",
    "java.configuration.checkProjectSettingsExclusions": false,
    "java.home": "E:\\Programs\\Java\\jdk1.8.0_241",
    "java.configuration.maven.userSettings": "E:\\Programs\\apache-maven-3.6.3\\conf\\settings.xml",
}