{
  // 文档: https://code.visualstudio.com/docs
  // 推荐插件：
  // Rust(rls) 、rust-analyzer、Liver Server、Prettier - Code formatter
  // C/C++、ccls、Code Runner、Cmake 、CMake Tools
  // GNU Assembler Language Support、Java Extension Pack
  // Bracket Pair Colorizer 2、Visual Studio Blue Theme、Color Highlight
  // Markdown All in one、One Dark Pro 、Git History、TOML Language Support
  // Python、Remote - *、LinkerScript、LaTeX Workshop
  "C_Cpp.autocomplete": "Disabled",
  "C_Cpp.formatting": "Disabled",
  "C_Cpp.errorSquiggles": "Disabled",
  "C_Cpp.intelliSenseEngine": "Disabled",
  "code-runner.executorMap": {
    "c": "cd $dir && clang $fileName -o $fileNameWithoutExt.exe && ./$fileNameWithoutExt.exe",
    "cpp": "cd $dir && clang++ $fileName -o $fileNameWithoutExt.exe && ./$fileNameWithoutExt.exe",
    "python": "cd $dir && python $fileName"
  },
  "code-runner.terminalRoot": "/", // unix风格
  "code-runner.runInTerminal": true,
  "code-runner.preserveFocus": false,
  "code-runner.saveAllFilesBeforeRun": true,
  "ccls.completion.detailedLabel": true,
  "ccls.completion.enableSnippetInsertion": true,
  "ccls.codeLens.enabled": false,
  "cmake.configureOnOpen": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.rulers": [80],
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.formatOnType": true,
  "editor.formatOnSave": true,
  "editor.fontFamily": "FiraCode NF, FiraCode Nerd Font, Noto Sans CJK SC Thin, 微软雅黑",
  "editor.fontSize": 15,
  "editor.renderControlCharacters": true,
  "editor.minimap.maxColumn": 80,
  "editor.selectionClipboard": false,
  "editor.fontLigatures": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.autoGuessEncoding": true,
  "files.trimTrailingWhitespace": true,
  "files.defaultLanguage": "cpp",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true
    // vs
    //"**/Debug": true,
    //"**/Release": true,
    //"**/x64": true,
    //"**/.vs": true,
    //"**/*.exe": true,
    // linux
    //"**/*.out": true,
    // DOS
    //"**/*.EXE": true,
    //"**/*.OBJ": true,
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/*.ccls-cache": true
  },
  "files.associations": {
    "*.m": "matlab",
    "*.gdbinit*": "shellscript",
    "*shrc": "shellscript",
    "*.asm": "gas" // GNU Assembly
  },
  "markdown.preview.fontSize": 15,
  //"markdown.preview.lineHeight": 1.1,
  "markdown.preview.fontFamily": "FiraCode Nerd Font, Noto Sans CJK SC",
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.detectIndentation": false,
    "editor.fontFamily": "Sarasa Mono SC, FiraCode NF Light, FiraCode Nerd Font, Noto Sans CJK SC", // 更纱黑体，包含中英文的表格可以对齐
    "editor.tabSize": 2,
    "editor.quickSuggestions": true
  },
  "svn.path": "D:/msys64/usr/bin/svn.exe",
  "svn.diff.withHead": false,
  "terminal.integrated.fontFamily": "FiraCode NF, FiraCode Nerd Font, Noto Sans CJK SC, 微软雅黑", // https://github.com/ryanoasis/nerd-fonts/tree/master/patched-fonts/FiraCode
  "terminal.integrated.fontSize": 15,
  //"terminal.integrated.shell.windows": "D:/msys64/usr/bin/bash.exe", // 使用msys2的bash
  //"terminal.integrated.shell.windows": "wsl.exe",
  "terminal.integrated.scrollback": 2000,
  "todo-tree.highlights.defaultHighlight": {
    "background": "#ff0"
  },
  "todo-tree.tree.showScanModeButton": false,
  "window.openFoldersInNewWindow": "on",
  "window.zoomLevel": -1,
  "window.titleBarStyle": "custom",
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.settings.editor": "json",
  "workbench.colorCustomizations": {
    "[Visual Studio Blue]": {
      "editor.background": "#f8f8f8",
      "tab.inactiveBackground": "#a7b2d5",
      "tab.inactiveForeground": "#000000",
      "editorGroupHeader.noTabsBackground": "#a7b2d5",
      "editorGroupHeader.tabsBackground": "#a7b2d5"
    }
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.dataScience.sendSelectionToInteractiveWindow": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "eslint.validate": ["json"],
  "leetcode.defaultLanguage": "rust",
  "leetcode.editor.shortcuts": ["submit", "test", "solution", "description"],
  // leetcode 的工作区文件夹
  "leetcode.workspaceFolder": "/mnt/SHARE/Rust_code/leetcode-rust-cn",
  "leetcode.filePath": {
    "rust": {
      "folder": "src/solution",
      "filename": "s${id}_${snake_case_name}.${ext}"
    }
  },
  "leetcode.hint.commentDescription": false,
  "leetcode.hint.configWebviewMarkdown": false,
  "leetcode.hint.commandShortcut": false,
  "rust-analyzer.debug.engine": "vadimcn.vscode-lldb",
  "rust-analyzer.rustfmt.extraArgs": ["--config", "merge_imports=true"], // 多个选项用 , 隔开
  "rust-analyzer.updates.channel": "stable",
  "leetcode.endpoint": "leetcode",
  // "http.proxy": "http://127.0.0.1:8889",
  "http.proxyStrictSSL": false,
  "breadcrumbs.symbolSortOrder": "position"
}
